<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Главная", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Клиенты", "Index", "Designers")</li>
                    <li>@Html.ActionLink("Платья", "Index", "Dresses")</li>
                    <li>@Html.ActionLink("Материалы", "Index", "Materials")</li>
                    <li>@Html.ActionLink("Заказы", "Index", "Main")</li>
                    <li>@Html.ActionLink("Склады", "Index", "Stores")</li>
                    <li>@Html.ActionLink("Добавить на склад", "AddMaterial", "Stores")</li>
                    <li>@Html.ActionLink("Прайс-лист", "DressPrice", "Report")</li>
                    <li>@Html.ActionLink("Отчет по загруженности складов", "StoresLoad", "Report")</li>
                    <li>@Html.ActionLink("Отчет по заказам", "DesignerRequests", "Report")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
